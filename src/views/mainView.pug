<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Document
    body(class="container")
    h1 Welcome to the fitness app!
    main
        div Add your workout schedule here!
        hr
        div
            form(id="form" )
                div(class="form-group")
                    label(for="exercise") Exercise name
                    input(type="text" class="form-control" id="exercise" placeholder="Enter a new exercise name" )
                    label(for="description") Exercise description
                    input(type="text" class="form-control" id="description" placeholder="Description" )
                    label(for="reps") nr of reps
                    input(type="number" class="form-control" id="reps" placeholder="reps" )
                    input(type="submit" class="btn btn-primary" ) 
        hr
        h1.display-3 Current exercise schema
        table.table
            thead
                tr
                    th Exercise
                    th reps
                    th description
            tbody
                - for (let i of fitnessItems)
                    tr
                        th= i.name
                        th= i.repetition
                        th= i.description



    script.
        const form = document.getElementById('form');
        (function() {
            if (form) {
                form.addEventListener('submit', event => {
                    event.preventDefault();
                    window.fetch('/app/submit', {
                        method: 'POST',
                        body: JSON.stringify({
                        name: document.getElementById('exercise').value,
                        description: document.getElementById('description').value,
                        repetition: document.getElementById('reps').value
                    }),
                    headers: {'Content-Type': 'application/json'}
                    });
                });
            }
        })();

